{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@*": [
        "./*"
      ]
    },
    "resolveJsonModule": true
  },
  "lib": [
    "dom", "es2020", "esnext.asynciterable"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "config/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
